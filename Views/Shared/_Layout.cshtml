@using Microsoft.AspNetCore.Identity
@inject UserManager<Usuario> Usuario
@inject SignInManager<Usuario> AdmTurismo

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - turismoTCC</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/turismoTCC.styles.css" asp-append-version="true" />
</head>
<body class="bg-light text-dark d-flex flex-column min-vh-100">

    <header class="bg-primary bg-gradient text-white py-3 mb-4">
        <div class="container d-flex align-items-center justify-content-between flex-wrap">
            <div class="me-auto">
                <h1 class="h3 mb-0">turismoTCC</h1>
            </div>
            <nav class="mx-auto">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuários</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="PontosTuristicos" asp-action="Previa">Pontos Turísticos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Sugestoes" asp-action="Create">Sugestoes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="ApresentaçãoPremiuns" asp-action="Index">Premium</a>
                    </li>
                    @if ((AdmTurismo.IsSignedIn(User)) && User.IsInRole("Administrador")){
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Master" asp-action="Index">Gerente</a>
                    </li>
                    }
                    
                </ul>
            </nav>
            <div class="ms-auto">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <main class="flex-grow-1">
        <div class="container my-5">
            <div class="bg-white p-4 rounded shadow-sm">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="bg-primary bg-gradient text-white text-center py-3 mt-auto">
        <div class="container">
            &copy; 2025 - turismoTCC |
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-underline">
                Política de Privacidade
            </a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
