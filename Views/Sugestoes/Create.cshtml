@model turismoTCC.Models.Sugestao

@{
    ViewData["Title"] = "Sugerir Novos Pontos Turísticos";
}

<div class="container mt-5">
    <!-- Cabeçalho estilizado -->
    <div class="bg-primary bg-gradient text-white p-4 rounded-4 shadow mb-4 text-center">
        <h2 class="mb-1">
            <i class="bi bi-lightbulb-fill me-2"></i> @ViewData["Title"]
        </h2>
        <p class="mb-0">Contribua sugerindo novos pontos turísticos para nossa base de dados.</p>
    </div>

    <!-- Formulário -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <h5 class="card-title mb-4 text-center text-primary">
                        <i class="bi bi-pencil-square me-2"></i>Nova Sugestão
                    </h5>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="nome" class="form-label"></label>
                            <input asp-for="nome" class="form-control" />
                            <span asp-validation-for="nome" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="descricao" class="form-label"></label>
                            <input asp-for="descricao" class="form-control" />
                            <span asp-validation-for="descricao" class="text-danger"></span>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send-check me-1"></i> Enviar Sugestão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
