@model IEnumerable<turismoTCC.Models.Localidade>

@{
    ViewData["Title"] = "Localidades Cadastradas";
}

<div class="container mt-5">
    <!-- Cabeçalho -->
    <div class="bg-primary bg-gradient text-white p-4 rounded-4 shadow mb-4 text-center">
        <h2 class="mb-1">
            <i class="bi bi-map-fill me-2"></i> Localidades Cadastradas
        </h2>
        <p class="mb-0">Visualize os pontos turísticos e locais registrados no sistema.</p>
    </div>

    <!-- Botão Criar -->
    <div class="mb-4 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Nova Localidade
        </a>
    </div>

    <!-- Tabela de Localidades -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center align-middle shadow-sm rounded-3">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.nome)</th>
                    <th>@Html.DisplayNameFor(model => model.bairro)</th>
                    <th>@Html.DisplayNameFor(model => model.linkMaps)</th>
                    <th>@Html.DisplayNameFor(model => model.descricao)</th>
                    <th>@Html.DisplayNameFor(model => model.tipo)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-light">
                        <td>@Html.DisplayFor(modelItem => item.nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.bairro)</td>
                        <td>
                            <a href="@item.linkMaps" target="_blank" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-geo-alt-fill"></i> Mapa
                            </a>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.descricao)</td>
                        <td>@Html.DisplayFor(modelItem => item.tipo)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.idLocal" class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.idLocal" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.idLocal" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
