@model turismoTCC.Models.Viagem

@{
    ViewData["Title"] = "Nova Viagem";
}

<div class="container mt-5">
    <!-- Cabeçalho -->
    <div class="bg-primary bg-gradient text-white p-4 rounded-4 shadow mb-4 text-center">
        <h2 class="mb-1">
            <i class="bi bi-airplane-engines me-2"></i> Cadastro de Nova Viagem
        </h2>
        <p class="mb-0">Preencha as informações para registrar uma nova viagem turística.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="shadow-sm p-4 rounded-4 border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="nome" class="form-label">Nome da Viagem</label>
                    <input asp-for="nome" class="form-control" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="idLocal" class="form-label">Localidade</label>
                    <select asp-for="idLocal" class="form-select" asp-items="ViewBag.idLocal"></select>
                    <span asp-validation-for="idLocal" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i> Cadastrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
