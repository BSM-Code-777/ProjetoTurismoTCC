@model turismoTCC.Models.Localidade

@{
    ViewData["Title"] = "Nova Localidade";
}

<div class="container mt-5">
    <!-- Cabeçalho -->
    <div class="bg-primary bg-gradient text-white p-4 rounded-4 shadow mb-4 text-center">
        <h2 class="mb-1">
            <i class="bi bi-geo-alt-fill me-2"></i> Cadastro de Nova Localidade
        </h2>
        <p class="mb-0">Preencha as informações abaixo para adicionar uma nova localidade.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="shadow-sm p-4 rounded-4 border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="nome" class="form-label">Nome</label>
                    <input asp-for="nome" class="form-control" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="bairro" class="form-label">Bairro</label>
                    <input asp-for="bairro" class="form-control" />
                    <span asp-validation-for="bairro" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="linkMaps" class="form-label">Link do Maps</label>
                    <input asp-for="linkMaps" class="form-control" />
                    <span asp-validation-for="linkMaps" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="descricao" class="form-label">Descrição</label>
                    <input asp-for="descricao" class="form-control" />
                    <span asp-validation-for="descricao" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="tipo" class="form-label">Tipo</label>
                    <input asp-for="tipo" class="form-control" />
                    <span asp-validation-for="tipo" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i> Cadastrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
