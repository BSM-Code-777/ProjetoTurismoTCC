@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <!-- Formulário de Login -->
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="card-title mb-4 text-center">@ViewData["Title"]</h1>

                    <form id="account" method="post" novalidate>
                        <h2 class="h5 mb-3 text-center">Use uma conta local para entrar.</h2>
                        <hr />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" required />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="password" required />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" id="RememberMeCheck" />
                            <label class="form-check-label" for="RememberMeCheck">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 mb-3">Acessar</button>

                        <div class="text-center">
                            <p><a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a></p>
                            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastre-se como um novo usuário</a></p>
                            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmação de e-mail</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
